rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isProjectOwner(projectId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/projects/$(projectId)).data.createdBy == request.auth.uid;
    }
    
    function isProjectMember(projectId) {
      // Check if user is owner or in members array
      let project = get(/databases/$(database)/documents/projects/$(projectId)).data;
      return isAuthenticated() && (
        project.createdBy == request.auth.uid ||
        (project.members != null && request.auth.uid in project.members)
      );
    }
    
    function hasValidFields(requiredFields) {
      return request.resource.data.keys().hasAll(requiredFields);
    }
    
    function isValidTimestamp(field) {
      return request.resource.data[field] is timestamp;
    }
    
    function isNotDeleted() {
      return !('deleted' in resource.data) || resource.data.deleted != true;
    }
    
    // ============================================
    // Projects Collection
    // ============================================
    
    match /projects/{projectId} {
      // Anyone authenticated can read projects (for listing)
      allow read: if isAuthenticated();
      
      // Only authenticated users can create projects
      allow create: if isAuthenticated() && 
        request.resource.data.createdBy == request.auth.uid &&
        hasValidFields(['name', 'createdBy', 'createdAt']);
      
      // Only owner can update or delete
      allow update: if isProjectOwner(projectId);
      allow delete: if isProjectOwner(projectId);
      
      // ============================================
      // Project Sub-collections
      // ============================================
      
      // BOM Items - project members can read/write
      match /bomItems/{itemId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        allow update: if isAuthenticated() && isProjectMember(projectId);
        allow delete: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Template BOM - project members can read, only owner can write
      match /templateBom/{itemId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // BOM Groups - project members can read/write
      match /bomGroups/{groupId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Template Groups - project members can read, only owner can write (created during import)
      match /templateGroups/{groupId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Group Selections - project members can read/write (for working BOM creation)
      match /groupSelections/{selectionId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Assemblies - project members can read/write
      match /assemblies/{assemblyId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Versions - project members can read, write
      match /versions/{versionId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        allow update: if isAuthenticated() && isProjectMember(projectId);
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
        
        // Version BOM Items (snapshots)
        match /bomItems/{itemId} {
          allow read: if isAuthenticated() && isProjectMember(projectId);
          allow write: if isAuthenticated() && isProjectMember(projectId);
        }
      }
      
      // New Parts - project members can read/write
      match /newParts/{newPartId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Quotes - project members can read/write
      match /quotes/{quoteId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // Import History - project members can read, only owner can write
      match /importHistory/{importId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Specs - project members can read/write, only owner can delete
      match /specs/{specId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create, update: if isAuthenticated() && isProjectMember(projectId);
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
        
        // Spec Changes - version history
        match /changes/{changeId} {
          allow read: if isAuthenticated() && isProjectMember(projectId);
          allow create: if isAuthenticated() && isProjectMember(projectId);
          allow update, delete: if false; // Changes are immutable
        }
      }
      
      // Group Origins - track how groups got into the BOM
      match /groupOrigins/{originId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectMember(projectId);
      }
      
      // ============================================
      // Phase 14: Collaboration Sub-collections
      // ============================================
      
      // Change Records - cell-level change history
      match /changeRecords/{recordId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        allow update: if false; // Change records are immutable
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Change Batches - grouped changes
      match /changeBatches/{batchId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        allow update: if false; // Batches are immutable
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Comment Threads - discussions on cells
      match /commentThreads/{threadId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        allow update: if isAuthenticated() && isProjectMember(projectId);
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Comments - individual comments in threads
      match /comments/{commentId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        // Only owner can edit/delete their own comments
        allow update: if isAuthenticated() && 
          resource.data.createdBy == request.auth.uid;
        allow delete: if isAuthenticated() && (
          resource.data.createdBy == request.auth.uid ||
          isProjectOwner(projectId)
        );
      }
      
      // ============================================
      // Phase 15: Unified Tasks (Project & Cell-level)
      // ============================================
      
      // Tasks - unified task system (both project-level and cell-level tasks)
      match /tasks/{taskId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create: if isAuthenticated() && isProjectMember(projectId);
        // Project members can update, assignees can update their own tasks
        allow update: if isAuthenticated() && (
          isProjectMember(projectId) ||
          resource.data.assigneeId == request.auth.uid ||
          // Check if user is in assignees array
          (resource.data.assignees != null && 
           request.auth.uid in resource.data.assignees.map(a, a.userId))
        );
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Task Groups - like Notion databases within a project
      match /taskGroups/{groupId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow create, update: if isAuthenticated() && isProjectMember(projectId);
        allow delete: if isAuthenticated() && isProjectOwner(projectId);
      }
      
      // Project Settings (column visibility, etc.)
      match /settings/{settingId} {
        allow read: if isAuthenticated() && isProjectMember(projectId);
        allow write: if isAuthenticated() && isProjectOwner(projectId);
      }
    }
    
    // ============================================
    // Global Master Data Collections
    // ============================================
    
    // SL Items - Infor master data (read-only for most users)
    match /slItems/{itemId} {
      allow read: if isAuthenticated();
      // Only allow write if user is admin (future implementation)
      // For now, allow authenticated users to write for import functionality
      allow write: if isAuthenticated();
    }
    
    // SL Vendors - Infor master data
    match /slVendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Vendor Contract Prices - Infor pricing data
    match /vendorContractPrices/{priceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ============================================
    // Phase 17: Running Changes
    // ============================================
    
    // Running Changes - continuous improvement changes that affect B-codes
    match /runningChanges/{changeId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Legacy items collection
    match /items/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Legacy vendors collection
    match /vendors/{vendorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Import Templates - user-specific templates
    match /importTemplates/{templateId} {
      allow read: if isAuthenticated();
      // Users can only write their own templates
      allow create: if isAuthenticated() && 
        request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Contract Prices - global pricing data
    match /contractPrices/{priceId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Landing Rates - global rates
    match /landingRates/{rateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Manufacturing Costs - global costs
    match /manufacturingCosts/{costId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // ============================================
    // Spec Mappings - Global Learning Database
    // ============================================
    
    // Spec Group Mappings - learned associations between spec options and BOM groups
    match /specMappings/{mappingId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      // Only admins can delete (future admin role implementation)
      // For now, disallow deletion to preserve learning data
      allow delete: if false;
    }
    
    // ============================================
    // User Profiles (future)
    // ============================================
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false; // Users cannot delete their profiles
      
      // User Preferences (Phase 14)
      match /preferences/{prefId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // Phase 14: Activity Collection (Global)
    // ============================================
    
    match /activity/{activityId} {
      // Any authenticated user can read activities
      // The query already filters by targetUserIds, so this is safe
      allow read: if isAuthenticated();
      
      // Authenticated users can create activities (system creates them)
      allow create: if isAuthenticated();
      
      // Authenticated users can mark as read/dismissed
      allow update: if isAuthenticated();
      
      // No delete - activities expire automatically or are dismissed
      allow delete: if false;
    }
    
    // ============================================
    // Phase 14: Organization Settings
    // ============================================
    
    match /organizations/{orgId} {
      allow read: if isAuthenticated();
      // For now, allow authenticated users to manage orgs
      // TODO: Add proper role-based access control
      allow write: if isAuthenticated();
      
      // Organization Settings
      match /settings/{settingId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
      
      // ============================================
      // Phase 15: External People & Task Templates
      // ============================================
      
      // External People - people who can be assigned to tasks but don't have accounts
      match /externalPeople/{personId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated();
        // Only admins should delete (for now, allow any authenticated user)
        allow delete: if isAuthenticated();
      }
      
      // Task Templates - reusable task group configurations
      match /taskTemplates/{templateId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated();
        allow delete: if isAuthenticated();
      }
    }
  }
}
